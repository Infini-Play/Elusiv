{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start pocketbase",
			"type": "shell",
            "command": "if [[ \"$OS\" == \"Windows_NT\" ]]; then ./pocketbase/pocketbase.exe serve --dev; else ./pocketbase/pocketbase serve --dev; fi",
            "isBackground": true,
			"problemMatcher": {
				"owner": "pocketbase",
				"pattern": [
					{
						"regexp": ".",
						"file": 1,
						"location": 2,
						"message": 3
					}
				],
				"background": {
					"activeOnStart": true,
                    "beginsPattern": ".*",
					"endsPattern": ".*(Server started).*"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Stop pocketbase",
			"type": "shell",
			"command": "pkill pocketbase",
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"group": "none"
		}
	]
}
